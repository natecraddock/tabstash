{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "build",
        "typeRoots": ["node_modules/@types", "node_modules/web-ext-types"]
    },
    "include": ["src/**/*"]
}
