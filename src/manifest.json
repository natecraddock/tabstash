{
    "manifest_version": 2,
    "name": "TabStash",
    "description": "Like `git stash` but for tabs",
    "version": "0.0.1",

    "homepage_url": "https://github.com/natecraddock/tabstash",
    "icons": {
        "48": "icons/tabstash-48.png",
        "96": "icons/tabstash-96.png"
    },

    "permissions": [
        "<all_urls>",
        "tabs",
        "menus",
        "storage",
        "tabHide"
    ],

    "browser_action": {
        "browser_style": true,
        "default_icon": "icons/tabstash-48.png",
        "default_title": "TabStash",
        "default_popup": "popup.html"
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "tabstash@nathancraddock.com"
        }
    }
}
